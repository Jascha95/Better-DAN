let sum = fun sum(l) = 
            call/cc (fun aux(return) =
                       let loop = fun loop(l) =
                                    if null(l) then 1
                                    else if head(l) == 0 then return(0)
                                         else head(l) * loop(tail(l))
                         in loop(l))
 in sum(cons(1, cons(0, cons(3, nil))))
