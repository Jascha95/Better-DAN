[MASTER]
max-line-length=79
score=no
disable=all
enable=
  C0103,  # Invalid %s name "%s" -- variable naming conventions
  C0111,  # Missing %s docstring, does also require module docstrings but no __init__ docstrings...
  C0112,  # Empty %s docstring
  C0301,  # Line too long (%s/%s)
  E1300,  # Unsupported format character %r (%#02x) at index %d
  W0311,  # Bad indentation. Found %s %s, expected %s
  W0312   # Found indentation with %ss instead of %ss (asserts 4 spaces and no tabs)

[VARIABLES]
# regexes to describe valid identifiers in different contexts
module-rgx=[a-z_][a-z0-9_]{0,30}$
const-rgx=.*$  # does also apply to non-constant global variables...
class-rgx=[A-Z][a-zA-Z0-9]{0,30}$
function-rgx=[a-z_][a-z0-9_]{0,30}$
method-rgx=[a-z_][a-z0-9_]{0,30}$
attr-rgx=[a-z_][a-z0-9_]{0,30}$
argument-rgx=[a-z_][a-z0-9_]{0,30}$
variable-rgx=[a-z_][a-z0-9_]{0,30}$
class-attribute-rgx=[a-z_][a-z0-9_]{0,30}$
inlinevar-rgx=[a-z_][a-z0-9_]{0,30}$
