<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="190.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox prefHeight="0.0" prefWidth="175.0" BorderPane.alignment="CENTER">
         <children>
               <Label fx:id="heightLabel" text="Höhe" />
               <TextField fx:id="heightInput" onAction="#heightEntered" />
               <Label fx:id="widthLabel" text="Breite" />
               <TextField fx:id="widthInput" onAction="#widthEntered" />
            <Label fx:id="errorLabel" textFill="RED" />
         </children>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <Label text="Bitte Spielfeldgröße eingeben:" BorderPane.alignment="CENTER" />
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <bottom>
      <Button fx:id="startButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#startAction" text="Spiel starten" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
